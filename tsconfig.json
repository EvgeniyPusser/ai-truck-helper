{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "server",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "moduleDetection": "force",
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "lib": [
      "es2015"
    ],
    "forceConsistentCasingInFileNames": true
  },
"include": [
  "server/**/*"
],
  "exclude": [
    "node_modules",
    "build"
  ]
}
