{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "baseUrl": ".",
    "rootDir": "server",
    "outDir": "build",
    "types": ["node"]
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "build"]
}
